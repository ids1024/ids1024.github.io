!!!
%html
  %head
    %meta{:charset=>"utf-8"}
    %title=current_page.data.title
    %link{:rel=> "stylesheet",:href=>"/style.css"}
    %link{:href=>"feed.xml", :type=>"application/atom+xml", :rel=>"alternate"}
  %body
    #site
      #header{:itemscope=>true, :itemtype=>"http://schema.org/WPHeader"}
        %h1
          %a{:href=>'/'}=data.site.title

      #content
        - if current_page.parent
          %h2=current_page.data.title

        - if page_articles.include? current_page
          %time.meta{:datetime=>current_page.date.strftime('%Y-%m-%d'),:itemprop=>"datePublished"}=current_page.date.strftime('%b %e %Y')
        =yield

      - if page_articles.include? current_page
        #comments
          #disqus_thread
          :javascript
            var disqus_shortname = "ids1024";
            var disqus_identifier = "#{current_page.date.strftime('%s')}";
            var disqus_url = "#{data.site.url+current_page.url}";
            var disqus_title = "#{current_page.title}";
            /* * * DON'T EDIT BELOW THIS LINE * * */
              (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          %noscript
            Please enable JavaScript to view the
            %a{:href=>"http://disqus.com/?ref_noscript"} comments powered by Disqus.
          %a.dsq-brlink{:href=>"http://disqus.com"}
            comments powered by
            %span.logo-disqus Disqus
